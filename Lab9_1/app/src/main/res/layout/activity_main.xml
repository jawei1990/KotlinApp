<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginTop="20px"
        android:text="龜兔賽跑"
        android:textSize="36dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tv_rabbit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:gravity="center"
        android:textSize="20dp"
        android:text="兔子"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <SeekBar
        android:id="@+id/sb_rabblit"
        android:layout_width="700px"
        android:layout_height="100px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        app:layout_constraintStart_toEndOf="@+id/tv_rabbit"
        app:layout_constraintTop_toBottomOf="@+id/tv_topic" />

    <TextView
        android:id="@+id/tv_totle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        android:gravity="center"
        android:textSize="20dp"
        android:text="烏龜"
        app:layout_constraintTop_toBottomOf="@+id/tv_rabbit"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <SeekBar
        android:id="@+id/sb_totle"
        android:layout_width="700px"
        android:layout_height="100px"
        android:layout_marginTop="50px"
        android:layout_marginLeft="50px"
        app:layout_constraintTop_toBottomOf="@+id/tv_rabbit"
        app:layout_constraintStart_toEndOf="@+id/tv_totle"/>

    <Button
        android:id="@+id/BtnStart"
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:layout_marginBottom="100px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:text="確認"
        app:layout_constraintTop_toBottomOf="@+id/sb_totle"
        app:layout_constraintLeft_toLeftOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>